<h1>Burgers!</h1>



<ul>
    {{#each burgers}} 
        {{#unless devoured}} 
            {{> burgerspartial/burger-block}} 
        {{/unless}} 
    {{/each}}
</ul>

<h2>Eaten</h2>


<ul>
    {{#each burgers}} 
        {{#if devoured}} 
            {{> burgerspartial/burger-block}} 
        {{/if}} 
    {{/each}}
</ul>

<h2>Add a Burger</h2>
<form class="create-form">

    <div class="form-group">
        <label for="burger">Burger Name:</label>
        <input type="text" id="burger" name="name">
    </div>

    <button type="submit">Add Burger</button>
</form>